import math

def prime_finder(n):
    if n < 2:
        return []  # No primes less than 2
    
    primes = []
    for num in range(2, n + 1):
        if is_prime(num):
            primes.append(num)
    
    return primes

def is_prime(num):
    if num < 2:
        return False
    if num == 2:
        return True  # 2 is a prime number
    if num % 2 == 0:
        return False  # Other even numbers are not prime
    
    max_divisor = int(math.sqrt(num)) + 1  # Check up to the square root of num
    for i in range(3, max_divisor, 2):  # Check odd divisors only
        if num % i == 0:
            return False
    
    return True

# Example usage:
print(prime_finder(11))  # Output: [2, 3, 5, 7, 11]
